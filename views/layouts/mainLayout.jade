    script(src="https://cdnjs.cloudflare.com/ajax/libs/d3/3.5.8/d3.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/bluebird/3.0.5/bluebird.js")
    script(src="/js/modernizr.js")
    script(src="/js/jquery.js")
    script(src="/js/foundation.min.js")
    script(src='//code.jquery.com/ui/1.11.4/jquery-ui.js')
    script(src="/js/autoComplete.js")
    script(src="/js/cityTypes.js")
    script(src="/js/jobTypes.js")
    script(src="/js/salaryTypes.js")
    script(src="/js/houseTypes.js")
    script(src="/assets/Blank_US_Map.svg")
    script(src="/js/map.js")


