
doctype html
html
  head
    link(rel="stylesheet", href="/css/styles.css")
    link(rel='stylesheet', href='//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css')
    script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0-alpha1/jquery.min.js")
    meta(name="viewport" content="width=device-width" initial-scale=1.0)

    include ../html/header.html
  body



    //- filter bar
    .row
      .large-12.columns#filter-bar

        .ui-widget#jobCategorySearch
          label(for='jobCategoryTypes') Job Category:
          input#jobCategoryTypes
        .ui-widget#jobtitleSearch
          label(for='jobtitleTypes') Job Title:
          input#jobtitleTypes
        .ui-widget#citySearch
          label(for='cityTypes') City:
          input#cityTypes
        .ui-widget#stateSearch
          label(for='stateTypes') State:
          input#stateTypes
        .ui-widget#salarySearch
          label(for='salaryTypes') Salary:
          input#salaryTypes
        .ui-widget#houseSearch
          label(for='houseTypes') House Type:
          input#houseTypes

        a.button(href="#") Submit

        hr

    //- salary bar
    .row#salary-bar
      .large-3.columns#large
        p
      .large-6.columns
        h2 ex. Programmer's salary in this area is
      .large-3.columns#large
        p

    //- map area
    .row
      .large-9.columns#map-container
       h2 this is map-container
       include ../partials/Blank_US_Map.svg
       include ../partials/map-fills.jade

      //- list/detals section
      aside.large-3.columns#list
        ul.side-nav
          h5 List/Details
          //- for Each job in jobs
          a(href="www.indeed.com")


        //- list/detals section
      aside.large-3.columns#list
        ul.side-nav
          h5 List/Details
            a(href="www.indeed.com")
              h2 job title
              h2 company
              h2 city/state
              p snippet

    //- footer
    footer.row
      .large-12.columns#footer
        hr

        .row
          .large-6.columns
            p &copy; Copyright no one at all. Go to town.

          .large-6.columns
            ul.inline-list.right
              a(href='#') Link 1

              a(href='#') Link 2

              a(href='#') Link 3

              a(href='#') Link 4


    block content
